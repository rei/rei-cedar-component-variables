{
  "name": "cdr-form-group",
  "notes": [
    "Form groups should wrap a `legend` element and contain a group of logically related input elements."
  ],
  "docs": "https://cedar.rei.com/components/form-group/",
  "examples": [
    {
      "name": "default",
      "html": "<fieldset class=\"cdr-form-group-default\">\n  <legend>form group title</legend>\n  <div class=\"cdr-form-group-content\"><input/><input/></div>\n</fieldset>",
      "scss": ["@include cdr-form-group-base-mixin;", ".cdr-form-group-content {\n    @include cdr-form-group-content-mixin;\n  }"]
    },
    {
      "name": "error",
      "html": "<fieldset class=\"cdr-form-group-error\">\n  <legend>form group title</legend>\n  <div class=\"cdr-form-group-content\"><input/><input/></div>\n</fieldset>",
      "scss": ["@include cdr-form-group-base-mixin;", ".cdr-form-group-content {\n    @include cdr-form-group-content-mixin;\n    @include cdr-form-group-error-mixin;\n  }"]
    }
  ]
}
